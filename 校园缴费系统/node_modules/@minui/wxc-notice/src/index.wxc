    }
    @e text {
      display: inline-block;
      margin-right: 30rpx;
      white-space: nowrap;
      font-size: 24rpx;
      line-height: 70rpx;
    }
    @e text {
      @m wrap {
        flex: 1;
        overflow: hidden;
      }
      @m animate {
        animation: notice 8s linear infinite;
      }
      @m overlay {
        position: absolute;
        width: 44rpx;
        height: 100%;
        top: 0;
        right: 60rpx;
        z-index: 1;
      }
      @m span {
        display: inline-block;
        margin-right: 18rpx;
      }
    }
    @e close {
      margin-left: 20rpx;
      color: #fff;
      font-size: 24rpx;
    }
  }
</style>
