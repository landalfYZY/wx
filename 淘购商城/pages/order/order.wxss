.titleBar{
  position: fixed;
  width: 100%;
  background: #fff;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  z-index: 3000;
}
button{
  display: block;
  margin: 0;
  line-height: 70rpx;
  border: none;
  color: #fff;
  font-size: 30rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  border-radius: 5px;
}
.cb{
  background: #6699FF;
}
.titleBar .item{
  margin-top: 17rpx;
  font-size: 32rpx;
  width: 20%;
  text-align: center;
}
.titleBar .act{
  border-bottom: 2px solid #FF4040;
  color: #FF4040
}
.orders{
  background: #fff;
}
.orders .title{
  padding: 20rpx 30rpx
}
.goodsitem{
  background: #f3f3f3;
  padding: 20rpx;
  border-bottom: 1px solid #e1e1e1;
}
.goodsitem:last-child{
  border-bottom: none;
}
.goodspanel{
  padding: 30rpx;
  background: #fff
}
.white{
  background: #fff
}
.buybtn{
  font-size: 30rpx;
  line-height: 70rpx;
  background: #ff9900;
  padding: 0 30rpx;
  color: #fff;
  border-radius: 5px
}
page{
  background: #efefef
}