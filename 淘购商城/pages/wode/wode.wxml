<!--背景图-->
<view class="top">
  <image mode="aspectFill" class="top-bgImg" src="{{bgImg}}"> </image>
  <view class="top_avatar">
    <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
    <view style="text-align:center;color:white">{{userInfo.nickName}}</view>
  </view>
  <view class="flex-start">
    <image src="/images/wode/jifen.png" style="width:40rpx;height:40rpx;margin-top:30rpx;margin-left:30rpx;"></image>
    <view style="font-size:27rpx;margin-left:20rpx;margin-top:30rpx;color:#fff;white-space:nowrap;width:100rpx;height:50rpx;line-height:50rpx">{{swUserInfo.source}}</view>
  </view>
</view>


<view class="panel flex-between bottom-line item-center" bindtap="addressManger">
  <view class="flex-start">
    <image class="icon-sm" style="margin-top:5rpx" src="/images/wode/address_icon.png"></image>
    <view style="margin-left:30rpx;font-size:30rpx;height:40rpx;line-height:40rpx;">我的收货地址</view>
  </view>
  <image class="icon-sm" src="/images/wode/fl.png"></image>
</view>
<view class="panel flex-between bottom-line item-center" bindtap='becomeWorker'>
  <view class="flex-start">
    <image class="icon-sm" style="margin-top:5rpx" src="/images/wode/paotui.png" ></image>
    <view style="margin-left:30rpx;font-size:30rpx;height:40rpx;line-height:40rpx;">申请成为店员</view>
  </view>
  <image class="icon-sm" src="/images/wode/fl.png"></image>
</view>
<view class="panel flex-between bottom-line item-center" bindtap='myOrder'>
  <view class="flex-start">
    <image class="icon-sm" style="margin-top:5rpx" src="/images/wode/dindan.png" ></image>
    <view style="margin-left:30rpx;font-size:30rpx;height:40rpx;line-height:40rpx;">我的订单</view>
  </view>
  <image class="icon-sm" src="/images/wode/fl.png"></image>
</view>
<view class="panel flex-between margin-xs bottom-line item-center" bindtap="myPhone">
  <view class="flex-start">
    <image class="icon-sm" style="margin-top:5rpx" src="/images/wode/sys.png"></image>
    <view style="margin-left:30rpx;font-size:30rpx;height:40rpx;line-height:40rpx;">绑定手机号</view>
  </view>
  <image class="icon-sm" src="/images//wode//fl.png"></image>
</view>
 <view class="panel margin-xs flex-between bottom-line item-center" bindtap="myAbout">
  <view class="flex-start">
    <image class="icon-sm" style="margin-top:5rpx" src="/images/wode/about.png"></image>
    <view style="margin-left:30rpx;font-size:30rpx;height:40rpx;line-height:40rpx;">关于我们</view>
  </view>
  <image class="icon-sm" src="/images/wode/fl.png"></image>
</view>
<view class="panel margin-xs flex-between bottom-line item-center" bindtap="myJiFen">
  <view class="flex-start">
    <image class="icon-sm" style="margin-top:5rpx" src="/images/wode/shancheng.png"></image>
    <view style="margin-left:30rpx;font-size:30rpx;height:40rpx;line-height:40rpx;">积分商城</view>
  </view>
  <image class="icon-sm" src="/images/wode/fl.png"></image>
</view> 