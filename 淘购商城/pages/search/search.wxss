page{
  background-color: #f3f3f3;
}
.searchsd{
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  background: #fff
}
.searchsd input{
  padding-left:8px;
  width: 80%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  background: #f3f3f3;
  border-radius: 5px
}
.searchsd .btn{
  border: 1px solid #000;
  color: #fff;
  font-size: 29rpx;
  border-radius: 5px;
  background-color: #000;
  padding: 0 20rpx;
  align-items: center;
  display: flex;
}
.panll{
  padding: 20rpx 30rpx;
  padding-bottom: 0rpx;
  background: #fff;
  padding-right: 0rpx;
}
.element{
  display: flex;
  justify-content: flex-start;
  flex-flow: wrap;
}
.element .item{
  margin-right: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  background: #f3f3f3;
  border-radius: 5px;
  margin-bottom: 30rpx;
}

.glist{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  border-bottom: 8px solid #f3f3f3
}
.glist .pho{
  width: 210rpx;
  height: 200rpx;
  position: relative;
}
.p1{
  width: 210rpx;
  height: 200rpx;
  border-radius: 10rpx;
  border:0.5rpx solid gainsboro;
  position: relative;
}
.glist .con{
  width: 350rpx;
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-right: 2rpx dashed #ccc;
  position: relative;
}
.glist .con .tit{
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-size: 32rpx;
  color: #323232;
  height: 80rpx;
  width: 350rpx;
  font-weight: bold;
  line-height: 45rpx
}
.glist .con .txt{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.glist .con .txt image{
  width: 80rpx;
  height: 40rpx;
}
.glist .con .txt view{
  margin-left: 15rpx;
}
.glist .tet{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  color: #676767;
}
.glist .status{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.glist .status text{
  font-size: 36rpx;
  font-weight: bold;
  color: #e2864f
}
.glist .status .tt{
  font-size: 22rpx;
  font-weight: bold;
  color: #a5a5a5
}
.glist .status .xq{
  font-size: 25rpx;
  color: #ec8f88
}
