/**index.wxss**/
page{
  background: #f3f3f3
}
.swiper-container{
 position: relative;
}
.swiper-container .swiper{
 height: 450rpx;
}
.swiper-container .swiper .img{
 width: 100%;
 height: 100%;
}
.swiper-container .dots{
 position: absolute;
 left: 0;
 right: 0;
 bottom: 20rpx;
 display: flex;
 justify-content: center;
}
.swiper-container .dots .dot{
 margin: 0 8rpx;
 width: 14rpx;
 height: 14rpx;
 background: #fff;
 border-radius: 8rpx;
 transition: all .6s;
}
.swiper-container .dots .dot.active{
 width: 24rpx;
 background: #f80;
}
.search-top{
  top:320rpx;
}
.iconlist{
  background: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}
.iconlist .item{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align: center;
  align-items: center;
}
.iconlist .item image{
  width: 100rpx;
  height: 100rpx;
}
.iconlist .item view{
  font-size: 24rpx;
  color: #737373;
}
.tuijian{
  display: flex;
  flex-direction: row;
  justify-content: center;
  text-align: center;
  align-items: center;
  border-bottom: 1px solid #f3f3f3
}
.glist{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-content: center;
  border-bottom: 8px solid #f3f3f3
}
.glist .pho{
  width: 210rpx;
  height: 200rpx;
  position: relative;
}
.p1{
  width: 210rpx;
  height: 200rpx;
  border-radius: 10rpx;
  border:0.5rpx solid gainsboro;
  position: relative;
}
.glist .con{
  width: 350rpx;
  margin-left: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border-right: 2rpx dashed #ccc;
  position: relative;
}
.glist .con .tit{
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-size: 32rpx;
  color: #323232;
  height: 80rpx;
  width: 350rpx;
  font-weight: bold;
  line-height: 45rpx
}
.glist .con .txt{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.glist .con .txt image{
  width: 80rpx;
  height: 40rpx;
}
.glist .con .txt view{
  margin-left: 15rpx;
}
.glist .tet{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  color: #676767;
}
.glist .status{
  width: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.glist .status text{
  font-size: 36rpx;
  font-weight: bold;
  color: #e2864f
}
.glist .status .tt{
  font-size: 22rpx;
  font-weight: bold;
  color: #a5a5a5
}
.glist .status .xq{
  font-size: 25rpx;
  color: #ec8f88
}



