page{
  background: #f3f3f3
}
.dmc{
  background: #fff;
  display: flex;
}
.dmc .dleft{
  width: 200rpx;
  background: #f1f1f1;
}
.dmc .dleft .item{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  font-weight: bold;
  color: #6d6e70;
  font-size: 27rpx;
  border-bottom:1px dashed #e1e1e1
}
.gg{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.glist{
  width: 500rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-content: center;
  border-bottom: 3px solid #f3f3f3;
}
.glist .pho{
  width: 160rpx;
  height: 150rpx;
  position: relative;
}
.p1{
  width: 160rpx;
  height: 150rpx;
  border-radius: 10rpx;
  border:0.5rpx solid gainsboro;
  position: relative;
}
.glist .con{
  margin-top: 5rpx;
  width: 320rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  position: relative;
}
.glist .con .tit{
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  font-size: 32rpx;
  color: #323232;
  height: 70rpx;
  width: 340rpx;
  font-weight: bold;
  line-height: 35rpx
}
.glist .con .txt{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.glist .con .txt image{
  width: 80rpx;
  height: 40rpx;
}
.glist .con .txt view{
  margin-left: 15rpx;
}
.glist .tet{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  color: #676767;
}