<image style='width:100%;height:320rpx;pst2' mode="aspectFill" src="/images/bgImg.jpg"> </image>

<view style='padding:0 30rpx;height:600rpx'>
  <!--卡片-->
  <view class=' me-panel' style='top:-200rpx'>
    <view class='flexc-start item-center'>
      <open-data class="touXiang margin-top-sanshi" style="overflow:hidden;" type="userAvatarUrl"></open-data>
      <open-data class='font-30-black2 margin-top-sanshi' type="userNickName" lang="zh_CN"></open-data>
      <view class='font-23-zhonhui'>18857818257</view>
      <view class="list-wrap margin-top-shi margin-bottom-liushi">
        <view class="list-item">
          <wxc-list wx:for="{{list}}" wx:key="index" class="item" title="{{item.title}}" desc="{{item.slot? '' : item.desc}}" mode="{{index == list.length-1 ? 'none': ''}}" src="{{item.src}}" icon="{{item.icon}}" icon-color="{{item.icolor}}">
            <view wx:if="{{item.slot && item.desc}}" class="desc-highlight">{{item.desc}}</view>
          </wxc-list>
        </view>
      </view>
    </view>
    <view class='paybtn' style='margin: auto;'>
      <view>更新用户信息</view>
    </view>
  </view>
</view>
