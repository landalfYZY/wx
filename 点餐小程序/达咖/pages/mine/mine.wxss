page {
  background: #f4f7fc;
}

.kapian {
  background: white;
  box-shadow: 0px 5px 7px #cfcfcf;
  border-radius: 20rpx;
  width: 90%;
  height: 60%;
}

.touXiang {
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  box-shadow: 0px 5px 7px #cfcfcf;
  top: 28%;
  left: 42%;
}

.list-wrap {
  width: 100%;
  background: #efefef;
}

.list-item {
  background: #fff;
  margin-bottom: 30rpx;
}

.list-item:last-child {
  margin: 0;
}

.item {
  flex: 1;
}

.desc-highlight {
  font-size: 24rpx;
  height: 38rpx;
  padding: 0 22rpx;
  border: 1px solid #f5342f;
  border-radius: 20rpx;
  color: #f5342f;
  line-height: 38rpx;
}

.paybtn {
  background-image: linear-gradient(120deg, #a1c4fd 0%, #45aaf2 100%);
  box-shadow: 0px 0px 10px 0ch #e1e1e1;
  color: #fff;
  line-height: 75rpx;
  width: 350rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  top: 37rpx;
}

.paybtn:active {
  background: #eee;
}

.me-panel {
  width: 100%;
  background: #fff;
  box-shadow: 0 0 10rpx 0 #e1e1e1;
  border-radius: 10rpx;
  position: relative;
  top: -200rpx;
}
